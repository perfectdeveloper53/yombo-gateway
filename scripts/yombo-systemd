[Unit]
Description=Yombo Home Automation software
Wants=network.target

[Service]
User=pi
Group=pi
WorkingDirectory=/opt/yombo-gateway/
PIDFile=/var/run/yombogateway.pid
ExecStartPre=/bin/bash --login -c 'env > /tmp/.yombo-magic-environment-file'
ExecStart=/opt/yombo-gateway/yombo.sh
EnvironmentFile=-/tmp/.yombo-magic-environment-file

[Install]
WantedBy=multi-user.target
